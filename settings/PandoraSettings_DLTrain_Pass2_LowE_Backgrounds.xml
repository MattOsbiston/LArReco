<pandora>
    <!-- GLOBAL SETTINGS -->
    <IsMonitoringEnabled>true</IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo>false</ShouldDisplayAlgorithmInfo>
    <SingleHitTypeClusteringMode>true</SingleHitTypeClusteringMode>

    <!-- ALGORITHM SETTINGS -->
    <algorithm type = "LArEventReading">
        <LArMCParticleVersion>2</LArMCParticleVersion>
        <LArCaloHitVersion>2</LArCaloHitVersion>
    </algorithm>

    <algorithm type = "LArPreProcessing">
        <OutputCaloHitListNameU>SSCaloHitListU</OutputCaloHitListNameU>
        <OutputCaloHitListNameV>SSCaloHitListV</OutputCaloHitListNameV>
        <OutputCaloHitListNameW>SSCaloHitListW</OutputCaloHitListNameW>
        <FilteredCaloHitListName>SSCaloHitList2D</FilteredCaloHitListName>
        <CurrentCaloHitListReplacement>SSCaloHitList2D</CurrentCaloHitListReplacement>
    </algorithm>

    <algorithm type = "LArDLSignal">
        <TrainingMode>false</TrainingMode>
	<ImageWidth>512</ImageWidth>
	<ImageHeight>512</ImageHeight>
	<CaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</CaloHitListNames>
        <InputCaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</InputCaloHitListNames>
	<CaloHitListName2D>SSCaloHitList2D</CaloHitListName2D>
        <SignalListNameU>SCaloHitListU</SignalListNameU>
        <SignalListNameV>SCaloHitListV</SignalListNameV>
        <SignalListNameW>SCaloHitListW</SignalListNameW>
        <SignalListName2D>SCaloHitList2D</SignalListName2D>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_backgrounds_photons_new_v5.0_1_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_backgrounds_photons_new_v5.0_1_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_backgrounds_photons_new_v5.0_1_W.pt</ModelFileNameW>
        <Visualise>false</Visualise>
    </algorithm>

    <algorithm type = "LArDLSignal">
	<TrainingMode>true</TrainingMode>
	<Pass>2</Pass>
	<TrainingOutputFileName>DUNEFD_LowE_Backgrounds_Pass_2_photons_v5</TrainingOutputFileName>
	<ImageWidth>128</ImageWidth>
        <ImageHeight>128</ImageHeight>
	<CaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</CaloHitListNames>
        <CaloHitListName2D>SSCaloHitList2D</CaloHitListName2D>
	<InputCaloHitListNames>SCaloHitListW SCaloHitListU SCaloHitListV</InputCaloHitListNames>
	<SignalListNameU>CaloHitListU</SignalListNameU>
        <SignalListNameV>CaloHitListV</SignalListNameV>
        <SignalListNameW>CaloHitListW</SignalListNameW>
        <SignalListName2D>CaloHitList2D</SignalListName2D>
        <Visualise>false</Visualise>
    </algorithm>
</pandora>
