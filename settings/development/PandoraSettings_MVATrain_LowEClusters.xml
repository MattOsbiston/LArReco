<pandora>
    <!-- GLOBAL SETTINGS -->
    <IsMonitoringEnabled>true</IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo>false</ShouldDisplayAlgorithmInfo>
    <SingleHitTypeClusteringMode>true</SingleHitTypeClusteringMode>

    <!-- ALGORITHM SETTINGS -->
    <algorithm type = "LArEventReading">
        <LArMCParticleVersion>2</LArMCParticleVersion>
        <LArCaloHitVersion>2</LArCaloHitVersion>
    </algorithm>

    <!-- ALGORITHM SETTINGS -->
    <algorithm type = "LArPreProcessing">
        <OutputCaloHitListNameU>SSCaloHitListU</OutputCaloHitListNameU>
        <OutputCaloHitListNameV>SSCaloHitListV</OutputCaloHitListNameV>
        <OutputCaloHitListNameW>SSCaloHitListW</OutputCaloHitListNameW>
        <FilteredCaloHitListName>SSCaloHitList2D</FilteredCaloHitListName>
        <CurrentCaloHitListReplacement>SSCaloHitList2D</CurrentCaloHitListReplacement>
    </algorithm>

    <algorithm type = "LArMCParticleMonitoring">
       <MCParticleListName>Input</MCParticleListName>
       <CaloHitListName>SSCaloHitList2D</CaloHitListName>
       <UseTrueNeutrinosOnly>true</UseTrueNeutrinosOnly>
       <MinHitsForDisplay>1</MinHitsForDisplay>
       <MinPrimaryGoodHits>1</MinPrimaryGoodHits>
       <MinHitsForGoodView>1</MinHitsForGoodView>
    </algorithm>

    <algorithm type = "LArDLSNSignal">
        <TrainingMode>false</TrainingMode>
        <ImageHeight>256</ImageHeight>
        <ImageWidth>256</ImageWidth>
        <PrintOut>true</PrintOut>
        <TrainingOutputFileName>LowE_P1</TrainingOutputFileName>
        <ApplyCheatedSeparation>false</ApplyCheatedSeparation>
        <ApplySignalZoomRandomised>false</ApplySignalZoomRandomised>
        <CaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</CaloHitListNames>
        <CaloHitListName2D>SSCaloHitList2D</CaloHitListName2D>
        <InputCaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</InputCaloHitListNames>
        <SignalListNameU>SCaloHitListU</SignalListNameU>
        <SignalListNameV>SCaloHitListV</SignalListNameV>
        <SignalListNameW>SCaloHitListW</SignalListNameW>
        <SignalListName2D>SCaloHitList2D</SignalListName2D>
        <BackgroundListName>BBCaloHitList</BackgroundListName>
        <ZoomCaloHitListU>SCaloHitListU</ZoomCaloHitListU>
        <ZoomCaloHitListV>SCaloHitListV</ZoomCaloHitListV>
        <ZoomCaloHitListW>SCaloHitListW</ZoomCaloHitListW>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_dunefdvd_backgrounds_lowe_28_11_24_1_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_dunefdvd_backgrounds_lowe_28_11_24_1_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_dunefdvd_backgrounds_lowe_28_11_24_1_W.pt</ModelFileNameW>
        <Visualise>false</Visualise>
        <VisualiseZoom>false</VisualiseZoom>
    </algorithm>

    <algorithm type = "LArDLSNSignal">
        <TrainingMode>false</TrainingMode>
        <TrainingOutputFileName>LowE_P2</TrainingOutputFileName>
        <PrintOut>true</PrintOut>
        <Pass>2</Pass>
        <ImageHeight>128</ImageHeight>
        <ImageWidth>128</ImageWidth>
        <CaloHitListNames>SSCaloHitListW SSCaloHitListU SSCaloHitListV</CaloHitListNames>
        <CaloHitListName2D>SSCaloHitList2D</CaloHitListName2D>
        <InputCaloHitListNames>SCaloHitListW SCaloHitListU SCaloHitListV</InputCaloHitListNames>
        <SignalListNameU>CaloHitListU</SignalListNameU>
        <SignalListNameV>CaloHitListV</SignalListNameV>
        <SignalListNameW>CaloHitListW</SignalListNameW>
        <SignalListName2D>CaloHitList2D</SignalListName2D>
        <BackgroundListName>BCaloHitList</BackgroundListName>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_dunefdvd_backgrounds_lowe_28_11_24_2_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_dunefdvd_backgrounds_lowe_28_11_24_2_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_dunefdvd_backgrounds_lowe_28_11_24_2_W.pt</ModelFileNameW>
	<Visualise>false</Visualise>
    </algorithm>

    <algorithm type = "LArDLVertexing">
        <TrainingMode>false</TrainingMode>
        <OutputVertexListName>NeutrinoVertices3D_Pass1</OutputVertexListName>
        <CaloHitListNames>CaloHitListW CaloHitListU CaloHitListV</CaloHitListNames>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_VD_LOWE_Prod_27_11_24_1_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_VD_LOWE_Prod_27_11_24_1_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_VD_LOWE_Prod_27_11_24_1_W.pt</ModelFileNameW>
	<Visualise>false</Visualise>
        <DistanceThresholds>0. 0.005 0.009 0.015 0.025 0.04 0.06 0.18 0.25 1.0</DistanceThresholds>
    </algorithm>

    <algorithm type = "LArDLVertexing">
        <TrainingMode>false</TrainingMode>
        <Pass>2</Pass>
        <InputVertexListName>NeutrinoVertices3D_Pass1</InputVertexListName>
        <OutputVertexListName>NeutrinoVertices3D</OutputVertexListName>
        <CaloHitListNames>CaloHitListW CaloHitListU CaloHitListV</CaloHitListNames>
        <ModelFileNameU>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_VD_LOWE_Prod_27_11_24_2_U.pt</ModelFileNameU>
        <ModelFileNameV>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_VD_LOWE_Prod_27_11_24_2_V.pt</ModelFileNameV>
        <ModelFileNameW>PandoraNetworkData/PandoraUnet_Vertex_DUNEFD_VD_LOWE_Prod_27_11_24_2_W.pt</ModelFileNameW>
        <ImageWidth>128</ImageWidth>
        <ImageHeight>128</ImageHeight>
	<Visualise>false</Visualise>
        <DistanceThresholds>0. 0.005 0.009 0.015 0.025 0.04 0.06 0.18 0.25 1.0</DistanceThresholds>
    </algorithm>

    <!-- TwoDReconstruction -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation">
            <MinMipFraction>0.3</MinMipFraction>
        </algorithm>
        <InputCaloHitListName>CaloHitListU</InputCaloHitListName>
        <ClusterListName>ClustersU</ClusterListName>
        <ReplaceCurrentCaloHitList>true</ReplaceCurrentCaloHitList>
        <ReplaceCurrentClusterList>true</ReplaceCurrentClusterList>
    </algorithm>
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation" />
        <InputCaloHitListName>CaloHitListU</InputCaloHitListName>
        <ClusterListName>ClustersU</ClusterListName>
        <ReplaceCurrentCaloHitList>true</ReplaceCurrentCaloHitList>
        <ReplaceCurrentClusterList>true</ReplaceCurrentClusterList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArCrossGapsAssociation"/>
    <algorithm type = "LArCrossGapsExtension"/>
    <algorithm type = "LArOvershootSplitting"/>
    <algorithm type = "LArBranchSplitting"/>
    <algorithm type = "LArKinkSplitting"/>
    <algorithm type = "LArTrackConsolidation">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>
    <algorithm type = "LArHitWidthClusterMerging"/>

    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation">
            <MinMipFraction>0.3</MinMipFraction>
        </algorithm>
        <InputCaloHitListName>CaloHitListV</InputCaloHitListName>
        <ClusterListName>ClustersV</ClusterListName>
        <ReplaceCurrentCaloHitList>true</ReplaceCurrentCaloHitList>
        <ReplaceCurrentClusterList>true</ReplaceCurrentClusterList>
    </algorithm>
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation" />
        <InputCaloHitListName>CaloHitListV</InputCaloHitListName>
        <ClusterListName>ClustersV</ClusterListName>
        <ReplaceCurrentCaloHitList>true</ReplaceCurrentCaloHitList>
        <ReplaceCurrentClusterList>true</ReplaceCurrentClusterList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArCrossGapsAssociation"/>
    <algorithm type = "LArCrossGapsExtension"/>
    <algorithm type = "LArOvershootSplitting"/>
    <algorithm type = "LArBranchSplitting"/>
    <algorithm type = "LArKinkSplitting"/>
    <algorithm type = "LArTrackConsolidation">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>
    <algorithm type = "LArHitWidthClusterMerging"/>

    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation">
            <MinMipFraction>0.3</MinMipFraction>
        </algorithm>
        <InputCaloHitListName>CaloHitListW</InputCaloHitListName>
        <ClusterListName>ClustersW</ClusterListName>
        <ReplaceCurrentCaloHitList>true</ReplaceCurrentCaloHitList>
        <ReplaceCurrentClusterList>true</ReplaceCurrentClusterList>
    </algorithm>
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArTrackClusterCreation" description = "ClusterFormation" />
        <InputCaloHitListName>CaloHitListW</InputCaloHitListName>
        <ClusterListName>ClustersW</ClusterListName>
        <ReplaceCurrentCaloHitList>true</ReplaceCurrentCaloHitList>
        <ReplaceCurrentClusterList>true</ReplaceCurrentClusterList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArCrossGapsAssociation"/>
    <algorithm type = "LArCrossGapsExtension"/>
    <algorithm type = "LArOvershootSplitting"/>
    <algorithm type = "LArBranchSplitting"/>
    <algorithm type = "LArKinkSplitting"/>
    <algorithm type = "LArTrackConsolidation">
        <algorithm type = "LArSimpleClusterCreation" description = "ClusterRebuilding"/>
    </algorithm>
    <algorithm type = "LArHitWidthClusterMerging"/>

    <!-- VertexAlgorithms -->
    <algorithm type = "LArVertexSplitting">
        <InputClusterListNames>ClustersU ClustersV ClustersW</InputClusterListNames>
    </algorithm>

    <!-- BdtLowEClusterMergingAlgorithm -->
    <algorithm type = "LArBdtLowEClusterMerging">
        <MCParticleListName>Input</MCParticleListName>
        <PrintOut>false</PrintOut>
        <VertexListName>NeutrinoVertices3D</VertexListName>
        <CaloHitListName>CaloHitList2D</CaloHitListName>
        <InputClusterListNames>ClustersU ClustersV ClustersW</InputClusterListNames>
        <EnableProbability>false</EnableProbability>
        <MinProbabilityCut>0.475f</MinProbabilityCut>
        <TrainingSetMode>true</TrainingSetMode>
        <TrainingOutputFileName>LowESignalBackgroundClusterMerging_02_12_24_v2.csv</TrainingOutputFileName>
        <MvaFileName>PandoraMVAData/LowEBackgroundClusterMergingFixed.xml</MvaFileName>
        <MvaName>MVALowEClusterMerging</MvaName>
        <WriteTree>false</WriteTree>
        <TreeName>void</TreeName>
        <TreeName2>void</TreeName2>
        <FileName>LowE.root</FileName>
        <UpperHitThreshold>100</UpperHitThreshold>
        <MinNCaloHits>1</MinNCaloHits>
        <CountHitsThreshold>0</CountHitsThreshold>
        <ContactThreshold>5</ContactThreshold>
        <ProximityThreshold>20</ProximityThreshold>
        <EdgeHitToolDivisions>8</EdgeHitToolDivisions>
        <SectorTolerance>0.04</SectorTolerance>
    </algorithm>

    <!-- Output list management -->
    <algorithm type = "LArPostProcessing">
        <PfoListNames>NeutrinoParticles3D TrackParticles3D ShowerParticles3D</PfoListNames>
        <VertexListNames>NeutrinoVertices3D DaughterVertices3D CandidateVertices3D</VertexListNames>
        <ClusterListNames>ClustersU ClustersV ClustersW TrackClusters3D ShowerClusters3D</ClusterListNames>
        <CaloHitListNames>CaloHitListU CaloHitListV CaloHitListW CaloHitList2D</CaloHitListNames>
        <CurrentPfoListReplacement>NeutrinoParticles3D</CurrentPfoListReplacement>
    </algorithm>
</pandora>
